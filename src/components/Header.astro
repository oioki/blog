---
import Logo from './Logo.astro'
import Nav from './Nav.astro'

const { current = '', locale, locales, slug } = Astro.props;
---

<style>
  header {
    display: flex;
    margin: 0 auto;
    max-width: 1400px;
    padding: 2em;
    width: 100%;
  }

  @media screen and (max-width: 520px) {
    header {
      padding: 2em 0;
    }
  }
</style>

<header>
  <Logo locale={locale} />
  <Nav current={current} locale={locale} locales={locales} slug={slug} />
</header>
