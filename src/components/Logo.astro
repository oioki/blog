---
const { locale } = Astro.props;
const indexLink = locale === 'en' ? '/' : `/${locale}/`;
---
<style>
  img {
    display: block;
    width: 75px;
  }

  @media screen and (max-width: 520px) {
    img {
      display: none;
    }
  }
</style>

<a href={indexLink}>
  <img alt="Blog Logo" src="/assets/logo.webp" width="75" height="50" />
</a>
