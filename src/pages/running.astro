---
import BaseLayout from '../layouts/BaseLayout.astro';

const title = 'Running';
const description = 'Running stats.';
const permalink = `${Astro.site.href}running`;
---

<BaseLayout title={title} description={description} permalink={permalink} current="running" locale="en" locales=[]>
  <div class="container">
    <h1>Running stats</h1>

    <form id="paceForm">
    <input type="text" id="time" value="4:00:00">
    <button>Calculate Pace</button>
    <div id="result"></div>
    </form>

    <script is:inline>
      document.getElementById('paceForm').addEventListener('submit', function(event) {
        event.preventDefault();

        const [hours, minutes, seconds] = document.getElementById('time').value.split(':').map(str => parseInt(str, 10));

        const totalSeconds = (hours * 3600) + (minutes * 60) + seconds;
        const marathonDistanceKm = 42.195;

        const paceSeconds = totalSeconds / marathonDistanceKm;
        const paceMinutes = Math.floor(paceSeconds / 60);
        const remainingSeconds = Math.round(paceSeconds % 60);

        result = `${paceMinutes}:${remainingSeconds.toString().padStart(2, '0')} min/km`;
        document.getElementById('result').textContent = result;
      });
    </script>

